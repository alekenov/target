# Пример файла .env для Facebook Ads Toolkit
# Скопируйте этот файл в .env и заполните своими значениями

# Настройки Facebook API
FACEBOOK_APP_ID=123456789012345
FACEBOOK_APP_SECRET=abcdef1234567890abcdef1234567890
FACEBOOK_ACCESS_TOKEN=EAABBBCCCDDDEEEFFFGGGHHHIIIJJJKKKLLLMMMNNNOOOPPPQQQRRRSSSaaabbbccc
FACEBOOK_AD_ACCOUNT_ID=act_1234567890

# Настройки Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890
TELEGRAM_LOG_CHANNEL_ID=-1001234567890

# Настройки логирования
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=logs
LOG_FILE=facebook_ads_toolkit.log

# Настройки отчетов
REPORT_DIR=reports/data
DAILY_REPORT_TIME=09:00
WEEKLY_REPORT_DAY=1  # 0 = Понедельник, 6 = Воскресенье
WEEKLY_REPORT_TIME=10:00

# Пороговые значения для предупреждений
ALERT_HIGH_CPC=100  # Порог для высокого CPC (в рублях)
ALERT_LOW_CTR=0.5   # Порог для низкого CTR (в процентах)
ALERT_BUDGET_THRESHOLD=80  # Порог для предупреждения о расходе бюджета (в процентах) 